<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciamento de Produtos - Sua Loja</title>
    <link rel="stylesheet" href="../public/css/style.css">
    </head>
<body>

    <header class="header">
        <div class="container">
            <h1 class="logo">Mercadinho do Sakamoto</h1>
            <nav class="nav">
                <a href="#lista-produtos">Produtos</a>
                <a href="#adicionar-produto">Adicionar Produto</a>
                <a href="#adicionar-categoria">Adicionar Categoria</a>
            </nav>
        </div>
    </header>

    <main class="container">

        <section id="lista-produtos" class="product-list-section">
            <h2>Produtos em Destaque</h2>
            
            <% if (produtos.length === 0) { %>
                <p class="empty-state">Nenhum produto cadastrado no momento.</p>
            <% } else { %>
                <div class="product-grid">
                    <% produtos.forEach(produto => { %>
                        <div class="product-card">
                            
                            <% if (produto.ProdutoImagem) { %>
                                <img src="public/uploads/<%= produto.ProdutoImagem %>" alt="<%= produto.ProdutoNome %>" class="product-image">
                            <% } else { %>
                                <div class="product-image-placeholder">Sem Imagem</div>
                            <% } %>

                            <div class="product-info">
                                <h3 class="product-name"><%= produto.ProdutoNome %></h3>
                                
                                <p class="product-price">R$ <strong><%= produto.ProdutoPreco.toFixed(2).replace('.', ',') %></strong></p>

                                <p class="product-detail"><span>Quantidade:</span> <%= produto.ProdutoQTD %></p>
                                <p class="product-detail"><span>Categoria:</span> <%= produto.ProdutoCategoria %></p>
                            </div>
                            
                            <div class="product-actions">
                                <button class="btn btn-excluir" data-id="<%= produto.ProdutoID %>">Excluir</button>
                                <button class="btn btn-edit">Detalhes</button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </section>

        <div class="management-panel">
            
            <section id="adicionar-produto" class="form-section">
                <h2>Adicionar Novo Produto</h2>
                <form action="/Produto/add" method="POST" enctype="multipart/form-data" class="form form-produto">
                    
                    <div class="form-group">
                        <label for="ProdutoNome">Nome do Produto:</label>
                        <input type="text" name="ProdutoNome" placeholder="Ex: Smartphone X" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="ProdutoQTD">Quantidade em Estoque:</label>
                        <input type="number" name="ProdutoQTD" placeholder="10" required min="1">
                    </div>
                    
                    <div class="form-group">
                        <label for="ProdutoPreco">Preço (R$):</label>
                        <input type="number" step="0.01" name="ProdutoPreco" placeholder="999.99" required min="0.01">
                    </div>
                    
                    <div class="form-group">
                        <label for="ProdutoImagem">Imagem do Produto:</label>
                        <input type="file" name="ProdutoImagem" accept="image/*" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="ProdutoCategoria">Categoria:</label>
                        <select name="ProdutoCategoria" required>
                            <option value="">-- Selecione uma Categoria --</option>
                            <% categorias.forEach(Categoria => { %>
                                <option value="<%= Categoria.CategoriaID %>"><%= Categoria.CategoriaNome %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Adicionar Produto</button>
                </form>
            </section>

            <section id="adicionar-categoria" class="form-section">
                <h2>Adicionar Nova Categoria</h2>
                <form action="/Categoria/add" method="POST" class="form form-categoria">
                    <div class="form-group">
                        <label for="CategoriaNome">Nome da Categoria:</label>
                        <input type="text" name="CategoriaNome" placeholder="Ex: Eletrônicos" required>
                    </div>
                    <button type="submit" class="btn btn-secondary">Adicionar Categoria</button>
                </form>
            </section>
        </div>

    </main>
    
    <footer class="footer">
        <p>&copy; <%= new Date().getFullYear() %> Sua Loja. Todos os direitos reservados.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const botoesExcluir = document.querySelectorAll('.btn-excluir');
            botoesExcluir.forEach(botao => {
                botao.addEventListener('click', () => {
                    const produtoID = botao.getAttribute('data-id');
                    if (confirm('Tem certeza que deseja excluir este produto? Esta ação é irreversível.')) {
                        // Usando fetch para enviar a requisição de exclusão (como você já fazia)
                        fetch(`/Produto/delete/${produtoID}`, {
                            method: 'DELETE'
                        })
                        .then(response => {
                            if (response.ok) {
                                // Redireciona para atualizar a lista após a exclusão
                                window.location.href = '/'; 
                            } else {
                                alert('Erro ao excluir o produto. Tente novamente.');
                            }
                        })
                        .catch(error => {
                            console.error('Erro na requisição:', error);
                            alert('Ocorreu um erro de rede ou servidor.');
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>